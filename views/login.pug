extends header
block main
    div.loginDiv
        h1 Авторизация
        if err
            h2 Неверная комнинация e-mail и пароль
        form(method='POST')
            input(type='text' name='email' maxlength='50' placeholder='E-mail' required)
            input(type='password' name='password' maxlength='50' placeholder='Пароль' required)
            button(type='submit') Войти